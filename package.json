{
  "name": "epmd-client",
  "version": "0.0.1",
  "description": "Node.js EPMD client",
  "homepage": "https://github.com/mweibel/node-epmd-client",
  "bugs": "https://github.com/mweibel/node-epmd-client/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mweibel/node-epmd-client.git"
  },
  "main": "index.js",
  "scripts": {
    "test": "epmd -daemon && node -harmony_classes ./node_modules/.bin/_mocha test",
    "test-coveralls": "node -harmony_classes ./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "keywords": [
    "erlang",
    "distribution",
    "networking",
    "cluster",
    "tcp"
  ],
  "author": "Michael Weibel <michael.weibel@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^2.1.2",
    "coveralls": "^2.11.2",
    "debug": "^2.1.3",
    "istanbul": "^0.3.11",
    "mocha": "^2.2.1",
    "mocha-lcov-reporter": "0.0.2"
  }
}
